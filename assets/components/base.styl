// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  padding-top: 50px
  background: black
  color: white

  &.detail-open
    overflow: hidden

    nav,
    .airport-list
      opacity: 0

nav,
.airport-list
  opacity: 1
  transition(opacity .3s ease-in)

::-moz-selection
  background-color: cyan
  color: white

::selection
  background-color: cyan
  color: white

// Full page overlay
.overlay
  width: 100%
  height: 100%
  display: block
  position: absolute
  z-index: 1
  background: black(.7)
  cursor: default

// Airport Codes back link
.back
  padding: 8px
  position: absolute
  top: 13px
  left: 7px
  z-index: 2
  border-radius: 3px
  text-transform: uppercase
  font-weight: $font-weight-bold
  color: white

  &:hover
    opacity: .5

  &:focus
    background: $blue
    outline: none

// Fade-in animation
{fadeInKeyframes}

// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both
